@using EntityLayer.Concrete
@model List<Announcement>
@{
    string color = "";
}
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <p class="mb-0 font-weight-normal float-left dropdown-header">Bidirimler</p>
    @foreach (var item in Model)
    {

        if (item.Status == "yeni yazı")
        {
            color = "preview-icon bg-success";
        }
        if (item.Status == "Yeni deneme")
        {
            color = "preview-icon bg-warning";
        }
        if (item.Status == "deneme3")
        {
            color = "preview-icon bg-info";
        }
        if (item.Status == "deneme4")
        {
            color = "preview-icon bg-primary";
        }
        if (item.Status == "deneme5")
        {
            color = "preview-icon bg-danger";
        }
        <a class="dropdown-item preview-item" href="/Writter/Default1/AnnouncementDetails/@item.ID">
            <div class="preview-thumbnail">
                <div class="@color">
                    <i class="ti-info-alt mx-0"></i>
                </div>
            </div>
            <div class="preview-item-content">
                <h6 class="preview-subject font-weight-normal">@item.Title</h6>
                <p class="font-weight-light small-text mb-0 text-muted">
                    @item.Status
                </p>
            </div>
        </a>
    }
</div>