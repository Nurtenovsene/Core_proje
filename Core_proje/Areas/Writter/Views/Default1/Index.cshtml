@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık.</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Status == "yeni yazı")
                            {
                                color = "badge badge-Warning";
                            }
                            if (item.Status == "Yeni deneme")
                            {
                                color = "badge badge-dark";
                            }
                            if (item.Status == "deneme2")
                            {
                                color = "badge badge-Primary";
                            }
                            if (item.Status == "deneme3")
                            {
                                color = "badge badge-info";
                            }
                            if (item.Status == "deneme4")
                            {
                                color = "badge badge-Success";
                            }
                            if (item.Status == "deneme5")
                            {
                                color = "badge badge-Danger";
                            }
                            <tr>


                                <th>@item.ID</th>
                                <td>@item.Title</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td><a href="/Writter/Default1/AnnouncementDetails/@item.ID" class="btn btn-outline-danger">Detaylar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
